load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("//build:docker.bzl", "push_docker")

go_library(
    name = "go_default_library",
    srcs = ["main.go"],
    data = ["ncs.yaml"],
    importpath = "backend/app/service/user/account/cmd",
    visibility = ["//visibility:private"],
    deps = [
        "//app/service/user/account/api/grpc:go_default_library",
        "//app/service/user/account/conf:go_default_library",
        "//app/service/user/account/service:go_default_library",
        "//pkg/cmd:go_default_library",
        "//pkg/log:go_default_library",
    ],
)

go_binary(
    name = "cmd",
    embed = [":go_default_library"],
    visibility = ["//visibility:public"],
)

push_docker(
    name = "push",
    app_name = "account",
    embed = [":go_default_library"],
)
