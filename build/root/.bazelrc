startup --host_jvm_args=-XX:+UseParallelGC --host_jvm_args=-Xmx6g --host_jvm_args=-Xms1g

# Disk cache
build --experimental_repository_cache_hardlinks
startup --output_user_root=./.cache/bazel

# Include git version info
build --workspace_status_command build/print-workspace-status.sh

# Show us information about failures.
build --verbose_failures
test --test_output=errors

# Cache
build --remote_cache=http://cache.new-page.xyz/bazel
build:ci --remote_cache=http://bazel-remote-cache:8080

# CI
build:ci -j 8
build:ci --genrule_strategy=local --spawn_strategy=local --show_progress_rate_limit=5
test:ci -j 8
test:ci --genrule_strategy=local --spawn_strategy=local --show_progress_rate_limit=5
run:ci -j 8
run:ci --genrule_strategy=local --spawn_strategy=local --show_progress_rate_limit=5